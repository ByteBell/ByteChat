{
  "manifest_version": 3,
  "name": "Byte Chat",
  "version": "1.0.0",
  "description": "All-purpose context copilot for independent users.",
  "background": {
        "service_worker": "background.js",
        "type": "module"

      },
  "action": {
    "default_icon": {
      "16": "icons/new_logo_16.png",
      "32": "icons/new_logo_32.png",
      "48": "icons/new_logo_48.png",
      "128": "icons/new_logo_128.png"
    }
  },
  "side_panel": {
    "default_path": "panel.html"
  },
  
  "icons": {
    "16":  "icons/new_logo_16.png",
    "32":  "icons/new_logo_32.png",
    "48":  "icons/new_logo_48.png",
    "128": "icons/new_logo_128.png"
  },
  "oauth2": {
    "client_id": "842265721700-a7hq7miue3b6bjgrspsiak9hgc39hk4g.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/userinfo.email",
      "https://www.googleapis.com/auth/userinfo.profile"
    ]
  },
  "permissions": [
    "activeTab",
    "scripting", 
    "storage",
    "tabs",
    "identity",
    "contextMenus",
    "sidePanel",
    "tabCapture",
    "desktopCapture"
  ],
  "optional_host_permissions": [
  ],
  "host_permissions": ["<all_urls>"]
    
}
