{
  "manifest_version": 3,
  "name": "Byte Chat",
  "version": "1.0.0",
  "description": "AI-powered chat assistant with multi-modal support. Login with Google for 1M free tokens or use your own API key. Features: text/image/file/audio, smart tools (translate, summarize, grammar fix), session history, real-time streaming, and support for OpenAI, Anthropic, OpenRouter, and Together AI.",
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_icon": {
      "16": "icons/new_logo_16.png",
      "32": "icons/new_logo_32.png",
      "48": "icons/new_logo_48.png",
      "128": "icons/new_logo_128.png"
    }
  },
  "side_panel": {
    "default_path": "panel.html"
  },
  "icons": {
    "16": "icons/new_logo_16.png",
    "32": "icons/new_logo_32.png",
    "48": "icons/new_logo_48.png",
    "128": "icons/new_logo_128.png"
  },
  "oauth2": {
    "client_id": "402323343917-csfh4qfgrtooan8s4jeiuvuaedjmis1b.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/userinfo.email",
      "https://www.googleapis.com/auth/userinfo.profile"
    ]
  },
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "tabs",
    "identity",
    "contextMenus",
    "sidePanel",
    "tabCapture",
    "desktopCapture"
  ],
  "optional_host_permissions": [],
  "host_permissions": [
    "<all_urls>"
  ]
}